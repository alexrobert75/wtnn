{% extends 'base.html.twig' %}

{% block title %}
	{{produit.nom}}
	{{parent()}}
{% endblock %}


{% block body %}

	<div class='card-fiche'>
		<div class="productimg" >
		<img src='../assets/img/{{produit.photourl}}'
					 alt='{{produit.slug}}'>
		</div>

		<div class='fiche-txt'>
			<p class='brand-fiche'>{{ produit.categorie}}</p>
			<p class='name-fiche'>{{ produit.nom}}</p>
			<p class='price-fiche'>
				{{ produit.prix}}
				$</p>
			{% if tailleProduct is empty %}
				<p class='msg-stock'>Out of stock</p>
			{% else %}
				<div class='container-size'>
					{% for size in tableSize %}
						<a class='btn-size' href='/cart/add/{{produit.id}}/{{size}}'>{{size}}</a>
					{% endfor %}
				</div>
			{% endif %}
			<span>DESCRIPTION:</span>
			<p class='desc-fiche'>{{ produit.description}}</p>
			<p class='ref-fiche'>
				<span>COLOR:</span>
				{{ produit.couleur}}</p>
			<p class='ref-fiche'>
				<span>REF:</span>
				{{ produit.ref}}</p>
		</div>

	</div>
{% endblock %}
